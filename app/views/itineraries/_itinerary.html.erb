<%= semantic_form_for itinerary, remote: true do |form| %>

  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <strong>The following errors prevented saving:</strong>
      <ul>
        <% form.object.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Day 1 - Aloha!' %>
  </div>

  <div class="datepicker-container">
    <div class="form-group">
      <%= form.label 'Date' %>
      <%= form.text_field :date, class: 'form-control datepicker', data: { date_format: 'YYYY/MM/DD' } %>
    </div>
  </div>
  <%= form.hidden_field :trip_id, as: :hidden %>

  <div class="form-group">
    <%= form.label 'Notes' %>
    <%= form.text_field :notes, class: 'form-control', placeholder:'Arrive and relax' %>
  </div>

  <div class="form-group">
    <%= form.label 'Public?' %>
    <%= form.check_box :public %>
  </div>

  <%= form.submit 'Add itinerary', class: 'btn btn-primary' %>

<% end %>

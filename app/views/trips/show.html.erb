      <% end %>
      <li class="nav-item">
        <%= link_to new_itinerary_url, class: "nav-link" do %>
        <i class="fas fa-plus-circle"></i>
        <% end %>
      </li>
    </ul>
  <%= render "itinerary-list" %>
  </div> 

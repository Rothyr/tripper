<div class="tab-pane <%= itinerary_iteration.first? ? "active show" : "" %>" id="<%= itinerary.id %>" role="tabpanel">
  <div class="itinerary-header-container">
    <div class="d-flex justify-content-between align-items-baseline">
      <h2><%= itinerary.name %>
      <button class="btn btn-neutral btn-sm btn-round" data-toggle="modal" data-target="#editItineraryModal"><i class="far fa-edit"></i></button>
      <a class="del-button btn btn-neutral btn-danger btn-sm del-button" rel="nofollow" data-method="delete" href="/itinerary/<%= itinerary.id %>"><i class="far fa-trash-alt"></i></a>
      </h2>
      <h3 class="text-primary"><%= itinerary.date ? itinerary.date.to_formatted_s(:long) : "" %></h3>
    </div>
  </div>
  <ul class="itinerary-item-append">
    <%= render partial: 'itinerary_items/card', collection: itinerary.itinerary_items, as: :itinerary_item %>
  </ul>
</div>



<div class="modal fade" id="editItineraryModal" tabindex="-1" role="dialog" aria-labelledby="editItineraryModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editItineraryModal">Update your itinerary: </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">

        <%= form_for itinerary do |form| %>

          <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form.hidden_field :trip_id, value: params[:id] %>
    
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Day 1 - Aloha!' %>
        </div>
    
        <div class="datepicker-container">
          <div class="form-group">
            <%= form.label 'Date' %>
            <%= form.text_field :date, class: 'form-control datepicker', data: { date_format: 'YYYY/MM/DD' } %>
          </div>
        </div>
    
        <div class="form-group">
          <%= form.label 'Notes' %>
          <%= form.text_field :notes, class: 'form-control', placeholder:'Arrive and relax' %>
        </div>
    
        <div class="form-group">
          <%= form.label 'Public?' %>
          <%= form.check_box :public %>
        </div>
        
        <%= form.submit 'Update', class: 'btn btn-primary' %>

        <% end %>
      
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-link btn-danger" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>
<div class="wrapper">
  <div class="page-header page-header-small">
    <div class="page-header-image" data-parallax="false" style="background-image: url('https://www.siteminder.com/wp-content/uploads/2015/07/TRAVELLERS_GROUP_istock.jpg'); transform: translate3d(0px, 0px, 0px)"></div>
    <div class="content-center">
      <div class="container">
        <h1 class="title"><%= @trip.name %></h1>
        <% if @trip.start_date && @trip.end_date %>
          <p><%= @trip.start_date.to_formatted_s(:long) %> - <%= @trip.end_date.to_formatted_s(:long) %></p>
        <% end %>
        <div class="user-pics">
          <% @users.each do |user| %>
            <% if user.profile_pic != nil %>
              <%= image_tag user.profile_pic, class: 'rounded-circle' %>
            <% else %>
              <a href="<%= user_trips_path(user) %>">
                <i class="user-icon fas fa-user-circle" title="<%= user.first_name %>"></i>
              </a>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="header-2" style="background-image: url('<%=image_path('img/bg11.jpg')%>')">

<div class="page-header header-filter">

  <div class="content-center">
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto text-center">
          <h1 class="title">Welcome to Tripper!</h1>
            <h5 class="description">"Join our community blh blah blah blah blah blh blah blah blah blahblh blah blah blah blahblh blah blah blah blahblh blah blah blah blahblh blah blah blah blah blah blahb blh blah blah blah blah blah blahb blh blah blah blah blah blah blahb "</h5>
        </div>
      <div class="col-md-10 ml-auto mr-auto">
        <div class="col-lg-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if @token != nil %>
    <%= hidden_field_tag :invite_token, @token %>
  <% end %>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", autocomplete: "first-name", class: "form-control bg-transparent" %>
  </div>
  <br />

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", autocomplete: "last-name", class: "form-control bg-transparent" %>
  </div>
  <br />

  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: "form-control bg-transparent" %>
  </div>
  <br />

  <div class="field">
    <%= f.password_field :password, placeholder: "Password #{"(#{@minimum_password_length} characters minimum)" if @minimum_password_length}", autocomplete: "new-password", class: "form-control bg-transparent" %>
  </div>
  <br />

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "form-control bg-transparent" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-round" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>




<br />
<br />
<br />
</div>
</div>
</div>
</div>
</div>
</div>

<div class="header-2" style="background-image: url('<%= image_path('img/login.jpg') %>')">
  <div class="page-header header-filter" filter-color="blue">
    <div class="content-center">
      <div class="container">

        <div class="col-md-8 ml-auto mr-auto text-center">
          <h1 class="title">Welcome back!</h1>
        </div>
        <div class="col-md-10 ml-auto mr-auto">
          <div class="card card-login card-plain" data-background-color="">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="d-flex flex-column align-items-center">
              <div class="col-md-3 ml-auto mr-auto">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control form-opacity" %>
              </div>
              <br />

              <div class="col-md-3 ml-auto mr-auto">
                <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control form-opacity" %>
              </div>
              <br />

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary btn-round btn-lg btn-block" %>
              </div>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="section section-comments">
  <div class="container">
    <div class="row">
      <div class="col-md-8 ml-auto mr-auto">
        <div class="media-area">
          <h3 class="title text-center">Have you visited? Let us know what you thought.</h3>
            <%= form_for [@attraction, @review] do |f| %>

              <%= f.label :rating %>
              <%= f.select :rating, options_for_select([["Select One", ""], 1, 2, 3, 4, 5]), class: 'genForm_dropBox' %>

              <%= f.label 'Write a review' %>
              <br>
              <%= f.text_area :review %>

              <%= f.submit 'Review attraction', class: 'btn btn-primary' %>
  
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
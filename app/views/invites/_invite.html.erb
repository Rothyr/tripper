<%= form_for [@trip, @invite] do |f| %>
  <%= f.hidden_field :trip_id, value: params[:id] %>
  <%= f.hidden_field :sender, value: current_user.id %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <br />
  <br />

  <%= f.label :message %>
  <%= f.text_area :message %>
  <br />
  <br />

  <%= f.submit 'Send invite' %>

<% end %>
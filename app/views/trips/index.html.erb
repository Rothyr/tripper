<%= render "layouts/user_header" %>
<main>
<div class="container">
  <% @trips.each do |trip| %>
    <div class="card">
      <div class="card-body">
        <div class="pull-right text-right">
        <a href="#" class="text-primary">Edit</a> | <a href="#" class="text-danger">Delete</a>
        </div>
        <h5 class="card-title"><%= trip.name %></h5>
        <p class="card-description"><%= trip.start_date.to_formatted_s(:long) %> to <%= trip.end_date.to_formatted_s(:long) %></p>
        <table class="table trip-table">
          <tbody>
          <% trip.itineraries.each do |itinerary| %>
            <tr>
              <td class="text-center"><%= itinerary.date.to_formatted_s(:short) %></td>
              <td><%= itinerary.name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>
  <% end %>
</div>
</main>

